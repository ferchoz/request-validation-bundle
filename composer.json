{
    "name": "choz/request-validation-bundle",
    "description": "a bundle that's inspired in Laravel request validation",
    "type": "symfony-bundle",
    "autoload": {
        "psr-4": {
            "Choz\\RequestValidationBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Choz\\RequestValidationBundle\\Tests\\": "tests/"
        }
    },
    "require": {
        "symfony/framework-bundle": "^6.1",
        "symfony/validator": "^6.1",
        "symfony/property-access": "^6.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "phpstan/phpstan": "^1.8"
    },
    "scripts": {
        "stan": "vendor/bin/phpstan analyse src tests --level=max",
        "test": "vendor/phpunit/phpunit/phpunit tests",
        "test-coverage": "XDEBUG_MODE=coverage vendor/phpunit/phpunit/phpunit tests --coverage-html=coverage"
    }
}
